<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.nordicskibums.karl.snowalarm.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Snow alarm\nby Nordic skibums"
        android:id="@+id/appTitle"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="distance to kittelfjÃ¤ll"
        android:id="@+id/dist"
        android:layout_alignBottom="@+id/getPosition"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set distance"
        android:onClick="onGetGPSClick"
        android:id="@+id/getPosition"
        android:layout_below="@+id/appTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="38dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get snowfall"
        android:onClick="onGetSnowClick"
        android:id="@+id/getSnowfall"
        android:layout_alignTop="@+id/showSnow"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="waiting for data..."
        android:id="@+id/showSnow"
        android:layout_below="@+id/dist"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="69dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/editTime"
        android:layout_alignBottom="@+id/getTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/cancelAlarm"
        android:layout_toLeftOf="@+id/cancelAlarm" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set time"
        android:onClick="onSetTime"
        android:layout_marginTop="29dp"
        android:id="@+id/getTime"
        android:layout_below="@+id/getSnowfall"
        android:layout_alignRight="@+id/getPosition"
        android:layout_alignEnd="@+id/getPosition" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Alarm"
        android:onClick="onSetAlarm"
        android:id="@+id/setAlarm"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/editTime"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Alarm"
        android:onClick="onCancelAlarm"
        android:id="@+id/cancelAlarm"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/setAlarm"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
